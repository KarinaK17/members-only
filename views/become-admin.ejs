<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>
    <div>
      <%- include("./partials/header.ejs") %>
      <main>
        <h2><%= title %></h2>
        <p>To become an admin you need to enter a secret password</p>
        <form action="" method="POST">
          <section>
            <label for="admin_password">Secret password:</label>
            <input
              type="text"
              id="admin_password"
              name="admin_password"
              required
            />
          </section>

          <div>
            <% if (locals.errors) { %>
            <ul>
              <% for (let error of errors) { %>
              <li><%= error.msg %></li>
              <% } %>
            </ul>
            <% } %>
          </div>
          <button type="submit">Enter</button>
        </form>
      </main>
    </div>
  </body>
</html>
