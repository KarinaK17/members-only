<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <div class="content">
      <%- include("./partials/header.ejs") %>
      <main>
        <h2><%= title %></h2>
        <form action="" method="POST" class="create-message-form">
          <section>
            <label for="title">Message title:</label>
            <input
              type="text"
              id="title"
              name="title"
              maxlength="100"
              required
            />
          </section>
          <section>
            <label for="text">Message text:</label>
            <input type="text" id="text" name="text" maxlength="300" required />
          </section>
          <div>
            <% if (locals.errors) { %>
            <ul>
              <% for (let error of errors) { %>
              <li><%= error.msg %></li>
              <% } %>
            </ul>
            <% } %>
          </div>
          <div class="buttons">
            <button type="submit">Add message</button>
            <a href="/">
              <button type="button">Return home</button>
            </a>
          </div>
        </form>
      </main>
    </div>
    <%- include("./partials/nav.ejs") %>
  </body>
</html>
